<!-- index.cshtml -->
@model IEnumerable<WebSAT.Models.Factura>

<h2>Facturas</h2>

<table class="table">
    <thead>
        <tr>
            <th>Versi√≥n</th>
            <th>Serie</th>
            <th>Folio</th>
            <th>Fecha</th>
            <th>Total</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var factura in Model)
        {
            <tr>
                <td>@factura.Version</td>
                <td>@factura.Serie</td>
                <td>@factura.Folio</td>
                <td>@factura.Fecha.ToString("yyyy-MM-dd")</td>
                <td>@factura.Total</td>
                <td>
                    <a href="@Url.Action("Edit", "Facturas", new { id = factura.Id })" class="btn btn-warning">Editar</a>
                    <a href="@Url.Action("Delete", "Facturas", new { id = factura.Id })" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
